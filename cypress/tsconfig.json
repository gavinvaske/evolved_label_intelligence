{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Cypress",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@test-utils/*": ["../test-utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "../../application/api/**/*.ts"
  ]
}