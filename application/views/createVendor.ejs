<%- include('partials/navbarMain.ejs') %>

<div class="page-wrapper create-table-entry">
    <div class="card">
        <div class="header">
            <div class="title-icon-box">
                <h1 class="text-blue card-title">Create New Vendor</h1>
            </div>
            <p>Fill out the form below to create a new vendor. Remember, you're <b>awesome :)</b></p>
        </div>
        <div class="alert-box">
            <%- include ("flashMessages") %>
        </div>
        <form id="create-vendor-form" action="/vendors/create", method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name">
             </div>
            <button class="create-entry submit-button" type="submit" value="Create Vendor">Create</button>
        </form>
    </div>
</div>