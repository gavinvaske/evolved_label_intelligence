<%- include('partials/navbarMain.ejs') %>

<div class="page-wrapper update-machine">
    <div class="card">
        <div class="header">
            <div class="card-title text-blue">
                <h1>Update Machine</h1>
            </div>
                <p>Make changes to the machine below and hit 'update' for them to take affect. Remember, you're <b>awesome :)</b></p>
        </div>
        <form action="/machines/update/<%= machine.id %>", method="POST">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="<%= machine.name %>">
            <button type="submit" class="submit-button">Update Machine</button>
        </form>
    </div>
</div>