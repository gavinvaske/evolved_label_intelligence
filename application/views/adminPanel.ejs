    function populateFinishesTable() {
        $.ajax({
            url: '/finishes/all',
            type: 'GET',
            success: function(finishes) {
                finishes.forEach((finish, index) => {
                    const htmlRow = createRowForFinishesTable(finish, index + 1);
                    $('#finishes-table tr:last').after(htmlRow);
                })
            },
            error: function(error) {
                alert(`Error => ${JSON.stringify(error)}`);
            }
        });
    }
    function populateMachinesTable() {
        $.ajax({
            url: '/machines/all',
            type: 'GET',
            success: function(machines) {
                machines.forEach((machine, index) => {
                    const htmlRow = createRowForMachinesTable(machine, index + 1);
                    $('#machines-table tr:last').after(htmlRow);
                });
            },
            error: function(error) {
