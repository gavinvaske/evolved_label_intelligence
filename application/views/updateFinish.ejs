
<%- include('partials/navbarMain.ejs') %>

<div class="page-wrapper update-material">
    <div class="card">
        <div class="header">
            <div class="card-title text-blue">
                <h1>Update Finish</h1>
            </div>
                <p>Make changes to the finish below and hit 'update' for them to take affect. Remember, you're <b>awesome :)</b></p>
        </div>
        <form action="/finishes/update/<%= finish.id %>", method="POST">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="<%= finish.name %>">
            <button type="submit" class="submit-button">Update Finish</button>
        </form>
    </div>
</div>