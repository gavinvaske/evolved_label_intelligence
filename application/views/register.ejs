<section class="registration-section">
    <div class="container">

        <%- include('partials/staticNavbarEntry.ejs') %>
        <div id="particles-js"></div>

            <div class="registration-content-frame">

                <h1>Intelligence Starts Here! ðŸš€</h1>
                <p>Label intelligence at the tip of your hand.</p>

                <div class="alert-box full-width">
                    <%- include ("flashMessages") %>
                </div>

                <form id="registration-form" action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <div class="input-frame email">
                            <input type="email" class="form-control" id="email" name="email">
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" class='invalid-icon' viewBox="0 0 24 24"><path d="M12 2c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-1 6h2v8h-2v-8zm1 12.25c-.69 0-1.25-.56-1.25-1.25s.56-1.25 1.25-1.25 1.25.56 1.25 1.25-.56 1.25-1.25 1.25z"/></svg>
                        </div>
                        <small class="text-danger">The Email field must be a valid email</small>
                    </div>
                    <div class="form-group password">
                        <label for="password">Password</label>
                        <div class="input-frame">
                            <input type="password" class="form-control password" id="password" name="password">
                            <div class="show-password-frame">
                                <svg xmlns="http://www.w3.org/2000/svg" width="17px" height="17px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="cursor-pointer feather feather-eye show-password-1"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                            </div>
                        </div>
                    </div>
                    <div class="form-group password">
                        <label for="repeatPassword">Re-type Password</label>
                        <div class="input-frame">
                            <input type="password" class="form-control repeat-password" id="repeatPassword" name="repeatPassword">
                            <div class="show-password-frame">
                                <svg xmlns="http://www.w3.org/2000/svg" width="17px" height="17px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="cursor-pointer feather feather-eye show-password-2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary register-button">Register</button>
                    <div class="already-have-account content">
                        Already have an account?<a href="/users/login"> Sign in instead</a>
                    </div>
                </form>

            </div>

        </div>

</section>

