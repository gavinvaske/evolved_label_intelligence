<%- include('partials/navbarMain.ejs') %>

<div class="page-wrapper new-recipe">

    <div class="card">

        <div class="header">
            <div class="title-icon-box">
                <svg xmlns="http://www.w3.org/2000/svg" width="50px" height="50px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                <h1>Create A New Recipe</h1>
            </div>
                <p>Fill out the form below to create a new recipe. Remember, you're <b>awesome :)</b></p>
        </div>

        <div class="alert-box">
            <%- include ("flashMessages") %>
        </div>

        <form action="", method="POST" id="create-new-recipe-form" class="create-new-recipe-form">
            <div class="form-wrapper">
                <div class="field-wrapper">
                    <div class="column-left">
                        <div class="form-group">
                            <label for="designNumber">Design Number</label>
                            <input type="text" name="designNumber" id="designNumber">
                        </div>
                        <div class="form-group">
                            <label for="dieNumber">Die Number</label>
                            <input type="text" name="dieNumber" id="dieNumber">
                        </div>
                        <div class="form-group">
                            <label for="howToVideo">How-to-Video</label>
                            <input type="text" name="howToVideo" id="howToVideo">
                        </div>
                    </div>
                    <div class="column-right">
                        <div class="form-group">
                            <label for="notes">Notes</label>
                            <textarea type="text" name="notes" id="notes"></textarea>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="authorId" id="authorId" value="<%= user.id %>">
                <button type="submit" class="btn btn-primary" value="Create Recipe">Create Recipe</button>

            </div>

        </form>

    </div>

</div>